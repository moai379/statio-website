    <body>

        <header>
            <div class="header-content">
                <div id="header-logo" class="header-logo" onclick="window.location = 'index.html'">
                    <img src="app-logo.png" alt="">
                    <p><b>tatio</b></p>
                </div>    
            </div>
        </header>

        <main>

            <div class="signin-container">
                <h1>Register</h1>
                <form action="/signup" method="post">
                    <label for="name"><b>Name:</b></label>
                    <input id ="name" type="text" name="name" placeholder="Enter your Name" onclick="colorInput('name')">
                    
                    <label for="username"><b>Username:</b></label>
                    <input id ="username" type="text" name="username" placeholder="Enter your Username" onclick="colorInput('username')">

                    <label for="email"><b>Email:</b></label>
                    <input id ="email" type="email" name="email" placeholder="Enter your Email ID" onclick="colorInput('email')">
                    
                    <label for="password"><b>Password:</b></label>
                    <input id ="password" type="password" name="password" placeholder="Enter your Password" onclick="colorInput('password')">
                    
                    <button type="submit">Register</button>
                </form>

                <p>By continuing, you agree to Statio's <a href="#">Terms of Use</a> and <a href="#">Privacy Policy</a>.</p>
            </div>

            <div class="signin-footer">
                <p>Do you have an account? <a href="signin.html">Sign in</a></p>
            </div>
            
        </main>

        <footer>
